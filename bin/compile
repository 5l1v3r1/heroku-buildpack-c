#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | sed -u 's/^/       /'
  [ "${PIPESTATUS[*]}" = "0 0" ]
fi
echo "-----> Compiling with Make"
make 2>&1 | sed -u 's/^/       /'
[ "${PIPESTATUS[*]}" = "0 0" ]
